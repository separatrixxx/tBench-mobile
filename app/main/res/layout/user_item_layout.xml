<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/user_profile_image_search_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_search"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/profile_image"
                android:layout_centerInParent="true"
                android:padding="5dp"
                app:civ_border_color="@color/colorMain"
                app:civ_border_width="2dp">

            </de.hdodenhof.circleimageview.CircleImageView>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_online"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/online"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="6dp"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="1.7dp"
                android:visibility="gone">

            </de.hdodenhof.circleimageview.CircleImageView>


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/user_profile_image_search_layout"
            android:layout_centerVertical="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/user_full_name_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name_register"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary">
                </TextView>


                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/heart_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/game"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/game_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/gift"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/gift_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/face1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/face1_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/face2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/face2_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/face3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/face3_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/crown"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/crown_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/burger"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/burger_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/mp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/megapixel"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/check_mark"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/check_mark"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:visibility="gone">
                </ImageView>


            </LinearLayout>


            <TextView
                android:id="@+id/message_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_message"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone">
            </TextView>


            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="10dp"
                android:visibility="gone">
            </TextView>


            <TextView
                android:id="@+id/user_name_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_profile"
                android:textSize="12dp"
                android:textColor="@color/colorPrimaryDark">

            </TextView>


        </LinearLayout>


        <ImageButton
            android:id="@+id/follow_btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/user_messages"
            android:background="@drawable/user_follow"
            android:text="Following"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:visibility="visible">

        </ImageButton>

        <ImageButton
            android:id="@+id/following_btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/user_messages"
            android:background="@drawable/user_following"
            android:text="Following"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:visibility="gone">

        </ImageButton>

        <ImageButton
            android:id="@+id/user_messages"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/user_messages"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
        </ImageButton>

    </RelativeLayout>
    

</RelativeLayout>