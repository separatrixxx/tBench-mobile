<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessagesChatActivity"
    android:background="@color/colorWhite">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/messages_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/messages_chat_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/back_messages"
                    android:text="@string/username_profile"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"
                    android:visibility="gone">
                </TextView>

                <ImageView
                    android:id="@+id/back_messages"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/back"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true">
                </ImageView>

                <ProgressBar
                    android:id="@+id/user_profile_image_progress_bar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/back_messages"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible">
                </ProgressBar>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile_image_messages"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/profile_image"
                    android:layout_toEndOf="@+id/back_messages"
                    android:padding="2.5dp"
                    app:civ_border_color="@color/colorMain"
                    app:civ_border_width="2dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/message_chat_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/user_profile_image_messages"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/messages_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/full_name_register"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            />


                        <ImageView
                            android:id="@+id/heart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/heart_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/game"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/game_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/gift"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/gift_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/face1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/face1_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/face2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/face2_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/face3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/face3_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/crown"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/crown_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/burger"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/burger_status"
                            android:layout_gravity="center"
                            android:layout_marginTop="1.5dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/mp"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/megapixel"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/check_mark"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/check_mark"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:visibility="gone">
                        </ImageView>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/messages_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username_profile"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"
                        />


                </LinearLayout>


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:id="@+id/emoji_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightBlue">
        </ScrollView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="visible"
        android:layout_above="@+id/emoji_layout">


        <ImageView
            android:id="@+id/attach_file"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/photo_messages"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="2dp">
        </ImageView>


        <ImageView
            android:id="@+id/emoji_messages"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/emoji_messages"
            android:layout_toEndOf="@+id/attach_file"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:visibility="visible">
        </ImageView>


        <ImageView
            android:id="@+id/emoji_messages_set"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/emoji_messages_set"
            android:layout_toEndOf="@+id/attach_file"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:visibility="invisible">
        </ImageView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/emoji_messages"
            android:layout_toStartOf="@+id/voice_message"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:padding="8dp"
            android:layout_centerVertical="true">


            <EditText
                android:id="@+id/type_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:backgroundTint="@android:color/white"
                android:hint="@string/write_message"
                android:maxLines="4"
                android:paddingStart="15dp"
                tools:ignore="RtlSymmetry">
            </EditText>

        </androidx.cardview.widget.CardView>



        <ImageView
            android:id="@+id/voice_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/microphone"
            android:layout_toStartOf="@+id/send_message"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp">
        </ImageView>


        <ImageView
            android:id="@+id/send_message"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/send"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
        </ImageView>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/deleted_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLight">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/messages_restricted"
                android:textColor="@color/colorLike"
                android:textSize="16sp"
                android:layout_margin="10dp">
            </TextView>


        </LinearLayout>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout_messages"
        android:layout_above="@+id/send_layout"
        android:layout_margin="5dp">
    </androidx.recyclerview.widget.RecyclerView>



    <ImageView
        android:id="@+id/messages_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0FFFFFF"
        android:visibility="gone">
    </ImageView>


    <ProgressBar
        android:id="@+id/messages_progress_bar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:visibility="gone">
    </ProgressBar>


    <FrameLayout
        android:id="@+id/fragment_container_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>


</RelativeLayout>