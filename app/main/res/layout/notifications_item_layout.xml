<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">


    <RelativeLayout
        android:id="@+id/notification_profile_image_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_profile_image"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/profile_image"
            android:layout_centerInParent="true"
            android:padding="5dp"
            app:civ_border_color="@color/colorMain"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/notification_profile_image_layout"
        android:layout_toStartOf="@+id/notification_post_image_card_view">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/full_name_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary">
            </TextView>


            <ImageView
                android:id="@+id/heart"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/heart_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>

            <ImageView
                android:id="@+id/game"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/game_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>

            <ImageView
                android:id="@+id/gift"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/gift_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/face1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/face1_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/face2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/face2_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/face3"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/face3_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/crown"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/crown_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/burger"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/burger_status"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/mp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/megapixel"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


            <ImageView
                android:id="@+id/check_mark"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/check_mark"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:visibility="gone">
            </ImageView>


        </LinearLayout>


        <TextView
            android:id="@+id/comment_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/colorMain">
        </TextView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/notification_post_image_card_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/notification_post_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop">
        </ImageView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>