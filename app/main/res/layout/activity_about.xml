<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/back_about"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15dp"
                android:text="@string/about"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/line_up"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLight"
        android:layout_below="@+id/about_toolbar">
    </ImageView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_up"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/city_back__layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/city1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/city1"
                    android:visibility="visible">
                </ImageView>

                <ImageView
                    android:id="@+id/city2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/city2"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/city3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/city3"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/logo11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_background"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:visibility="visible">
                </ImageView>

                <ImageView
                    android:id="@+id/logo12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_cross"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:visibility="visible">
                </ImageView>

                <ImageView
                    android:id="@+id/logo21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_background"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/logo22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_cross"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/logo31"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_background"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/logo32"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_cross"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:visibility="gone">
                </ImageView>

                <ImageView
                    android:id="@+id/click1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/click"
                    android:visibility="visible"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp">
                </ImageView>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/not_just"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/not"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@color/accent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/not"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/just_a_social_network"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp"
                        android:textStyle="bold">
                    </TextView>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        android:background="@color/colorWhite"
                        android:layout_centerInParent="true">


                        <ImageView
                            android:id="@+id/about_image_1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/about_image_1"
                            android:scaleType="centerCrop"
                            android:visibility="visible">
                        </ImageView>


                        <ImageView
                            android:id="@+id/about_image_2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/about_image_2"
                            android:scaleType="centerCrop"
                            android:visibility="gone">
                        </ImageView>


                        <ImageView
                            android:id="@+id/about_image_3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/about_image_3"
                            android:scaleType="centerCrop"
                            android:visibility="gone">
                        </ImageView>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLight"
                android:layout_marginTop="30dp">
            </ImageView>


            <RelativeLayout
                android:id="@+id/tBench_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tBench_is_a_startup"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tBench"
                    android:textSize="18sp"
                    android:textColor="@color/accent"
                    android:textStyle="bold">
                </TextView>

            </RelativeLayout>


            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLight"
                android:layout_marginTop="25dp">
            </ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_us"
                    android:textSize="25sp"
                    android:textColor="@color/accent"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp">
                </TextView>

                <LinearLayout
                    android:id="@+id/Smolensk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/find">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="20dp"
                            android:background="@color/colorWhite"
                            android:layout_centerInParent="true">


                            <ImageView
                                android:id="@+id/smolensk_1"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/smolensk1"
                                android:scaleType="centerCrop"
                                android:visibility="visible">
                            </ImageView>


                            <ImageView
                                android:id="@+id/smolensk_2"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/smolensk2"
                                android:scaleType="centerCrop"
                                android:visibility="gone">
                            </ImageView>


                            <ImageView
                                android:id="@+id/smolensk_3"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/smolensk3"
                                android:scaleType="centerCrop"
                                android:visibility="gone">
                            </ImageView>


                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/based_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/based"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginEnd="20dp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Smolensk"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/accent"
                            android:layout_marginEnd="20dp"
                            android:layout_below="@+id/based_in">
                        </TextView>

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>


            <ImageView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLight"
                android:layout_marginTop="25dp">
            </ImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_the_future"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold">
                </TextView>


            </RelativeLayout>


            <ImageView
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLight"
                android:layout_marginTop="25dp">
            </ImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/team"
                    android:textSize="25sp"
                    android:textColor="@color/accent"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp">
                </TextView>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/founder"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/nikita_lokhmatov"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="3dp"
                    android:layout_below="@+id/team"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true">
                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:layout_below="@+id/founder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Nikita_Lokhmatov"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">
                </TextView>

            </RelativeLayout>


            <ImageView
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLight"
                android:layout_marginTop="25dp">
            </ImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thank"
                    android:textSize="25sp"
                    android:textColor="@color/accent"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                </TextView>


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>