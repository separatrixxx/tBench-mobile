<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/comment_body"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_image"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/colorMain"
                app:civ_border_width="1.5dp"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/full_name_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name_register"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    />


                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/heart_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/game"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/game_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/gift"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/gift_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/face1"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/face1_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/face2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/face2_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/face3"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/face3_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/crown"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/crown_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/burger"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/burger_status"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/mp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/megapixel"
                    android:layout_gravity="center"
                    android:layout_marginTop="2.5dp"
                    android:visibility="gone">
                </ImageView>


                <ImageView
                    android:id="@+id/check_mark"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/check_mark"
                    android:layout_gravity="center"
                    android:layout_marginTop="2.5dp"
                    android:visibility="gone">
                </ImageView>


            </LinearLayout>

            <TextView
                android:id="@+id/comment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_text"
                android:textSize="13dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="9dp"
                android:layout_marginTop="3dp">
            </TextView>

        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLight"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    </ImageView>



</LinearLayout>