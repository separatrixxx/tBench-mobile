<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/colorWhite">




    <RelativeLayout
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_alignParentBottom="true"
        android:transitionName="loginLayoutTransition">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="30dp">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="50dp">
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="55dp"
                        app:cardCornerRadius="27dp"
                        android:layout_marginRight="7dp">

                        <EditText
                            android:id="@+id/full_name_register"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@android:color/white"
                            android:hint="@string/full_name_register"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:textColorHint="@color/colorPrimaryDark"></EditText>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="55dp"
                        app:cardCornerRadius="27dp"
                        android:layout_marginLeft="7dp">

                        <EditText
                            android:id="@+id/username_register"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@android:color/white"
                            android:paddingLeft="15dp"
                            android:hint="@string/username_register"
                            android:inputType="text"
                            android:textColorHint="@color/colorPrimaryDark">
                        </EditText>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:cardCornerRadius="27dp">

                    <EditText
                        android:id="@+id/email_register"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:backgroundTint="@android:color/white"
                        android:paddingLeft="15dp"
                        android:hint="@string/email_register"
                        android:inputType="text"
                        android:textColorHint="@color/colorPrimaryDark">
                    </EditText>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    app:cardCornerRadius="27dp"
                    android:layout_marginRight="7dp">

                    <EditText
                        android:id="@+id/password_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/white"
                        android:paddingLeft="15dp"
                        android:hint="@string/password_register"
                        android:inputType="textPassword"
                        android:textColorHint="@color/colorPrimaryDark">
                    </EditText>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    app:cardCornerRadius="27dp"
                    android:layout_marginLeft="7dp">

                    <EditText
                        android:id="@+id/confirm_password_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/white"
                        android:paddingLeft="15dp"
                        android:hint="@string/confirm_password_register"
                        android:inputType="textPassword"
                        android:textColorHint="@color/colorPrimaryDark">
                    </EditText>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp">

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@android:color/white"
                    android:layout_gravity="center"
                    android:text="@string/sign_up_register"
                    android:textColor="@color/colorAccent"
                    >
                </Button>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/registration_login_btn_layout"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="10dp">
                </ImageView>


                <LinearLayout
                    android:id="@+id/registration_login_btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/already_have_account"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/registration_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in_login"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        >
                    </TextView>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>



    <ImageView
        android:id="@+id/registration_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0FFFFFF"
        android:visibility="gone">
    </ImageView>


    <ProgressBar
        android:id="@+id/registration_progress_bar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:visibility="gone">
    </ProgressBar>



</RelativeLayout>